{
  "name": "simple-web-app",
  "version": "1.0.0",
  "description": "Simple Web Application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "serve": "nodemon src/index.js"
  },
  "keywords": [
    "nodejs"
  ],
  "author": "Moe Green",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^2.0.22",
    "prettier": "^3.5.3"
  },
  "nodemonConfig": {
    "watch": [
      "./src/**"
    ],
    "ignore": [
      "test/*",
      "docs/*",
      "dist/*",
      "src/**/*.spec.js"
    ],
    "ext": "js",
    "events": {
      "restart": "clear",
      "crash": "clear"
    },
    "delay": 2500
  }
}